{
    "compilerOptions": {
        "importsNotUsedAsValues": "error",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "public/*"
    ]
}